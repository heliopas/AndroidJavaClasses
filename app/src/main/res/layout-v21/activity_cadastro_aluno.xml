<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".ui.activity.CadastroAlunoActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:title="Cadastro de alunos"
        android:background="@color/black"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"/>
    
    <TextClock
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"/>

    <EditText android:id="@+id/activity_cadastro_aluno_nome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:hint="Nome"
        />

    <EditText android:id="@+id/activity_cadastro_aluno_data_nascimento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:hint="Data nascimento"
        />

    <EditText android:id="@+id/activity_cadastro_aluno_cpf"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:hint="CPF"
        />


</LinearLayout>